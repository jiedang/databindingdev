<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="简单实例"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_simple_import"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="data标签子标签import简单使用"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_simple_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="data binding + include"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_no_find_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="去除findViewById"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_data_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据刷新"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_two_way_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="双向绑定"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_customer_two_way_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义View双向绑定"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_event_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="事件绑定"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/button_recycler_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Binding + RecyclerView"
        android:textAllCaps="false" />

</LinearLayout>